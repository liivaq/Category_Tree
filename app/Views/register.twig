{% extends 'layout.twig' %}
{% block content %}
    <div class="max-w-md mx-auto bg-white p-8 border rounded shadow">
        <h2 class="text-2xl font-bold mb-4">Register</h2>
        <form method="POST" action="/register" novalidate>
            <div class="mb-4">
                <label for="username" class="block text-gray-700 text-sm font-bold mb-2">Username</label>
                <input type="text"
                       id="username"
                       name="username"
                       class="w-full px-3 py-2 border rounded-lg focus:outline-none focus:ring-blue-500 focus:border-blue-500"
                       required value="{{ session.flash.old.username }}">
                <p class="text-sm text-red-400">{{ session.flash.errors.username[0] }}</p>
            </div>
            <div class="mb-4">
                <label for="email" class="block text-gray-700 text-sm font-bold mb-2">Email</label>
                <input
                        type="email"
                        id="email"
                        name="email"
                        class="w-full px-3 py-2 border rounded-lg focus:outline-none focus:ring-blue-500 focus:border-blue-500"
                        required value="{{ session.flash.old.email }}">
                <p class="text-sm text-red-400">{{ session.flash.errors.email[0] }}</p>
            </div>
            <div class="mb-4">
                <label for="password" class="block text-gray-700 text-sm font-bold mb-2">Password</label>
                <input
                        type="password"
                        id="password"
                        name="password"
                        class="w-full px-3 py-2 border rounded-lg focus:outline-none focus:ring-blue-500 focus:border-blue-500"
                        required value="{{ session.flash.old.password }}">
                <p class="text-sm text-red-400">{{ session.flash.errors.password[0] }}</p>
            </div>
            <button type="submit"
                    class="w-full bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded focus:outline-none focus:ring-blue-500 focus:border-blue-500">
                Register
            </button>

            <div class="mt-6 flex justify-end">
                <p>Already registered? <a href="/login" class="text-sky-500">Log in!</a></p>
            </div>
        </form>
    </div>
{% endblock %}