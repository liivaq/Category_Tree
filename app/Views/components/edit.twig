<form class="my-4" action="/section/edit" method="POST">
    <div>
        <label for="editTitle-{{ section.id }}" class="block text-gray-700 font-bold mb-2">Title</label>
        <input
                class="px-3 py-2 border rounded-lg focus:outline-none focus:ring-blue-500 focus:border-blue-500"
                type="text"
                name="title"
                id="editTitle-{{ section.id }}"
                value="{{ section.getTitle() }}">

        <label for="editDescription-{{ section.id }}"
               class="block text-gray-700 font-bold mb-2">Description</label>
        <textarea
                class="px-3 py-2 border rounded-lg focus:outline-none focus:ring-blue-500 focus:border-blue-500"
                name="description"
                id="editDescription-{{ section.id }}"
                >{{ section.getDescription() }}</textarea>
        <input type="hidden" name="id" value="{{ section.getId() }}">
    </div>

    <div class="mt-4">
        <button
                data-section-id="{{ section.getId() }}"
                class="save-button bg-green-600 hover:bg-green-400 text-white font-bold py-2 px-4 rounded focus:outline-none focus:ring-blue-500 focus:border-blue-500">
            Save
        </button>
        <button
                data-target="{{ section.getId() }}"
                type="button"
                class="cancel-button bg-gray-600 hover:bg-gray-400 text-white font-bold py-2 px-4 rounded focus:outline-none focus:ring-blue-500 focus:border-blue-500">
            Cancel
        </button>
    </div>

</form>